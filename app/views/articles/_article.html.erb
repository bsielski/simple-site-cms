<div>
  <article class="article">
    <h1 class="article_title">
      <%= link_to article.title, article, class:"article_title__link" %>
    </h1>
    <div class="article_categories" >
      <span class="article_categories__title">
	<%= "Category".pluralize(article.categories.size) %>:
      </span>
      <ul class="article_categories__list"> 
	<%= category_items article.categories.map{ |c| c.name}, article.categories, class:"article_categories__item", link_class:"article_categories__link" %>
    </div>
    
    <section class="article_body"><%= article.content.html_safe %></section>

    <footer class="article_footer">
      <%= time_tag article.created_at, class:"article_footer__created" %>
      <%= link_to article.author.name, "author_articles_path(article.author)", rel:"author", class:"article_footer__author" %>
    </footer>
  </article>
  
</div>
