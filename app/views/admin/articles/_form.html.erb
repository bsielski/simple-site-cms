<%= form_for [:admin, @article] do |f| %>

  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>
      <ul>
        <% @article.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="">
    <%= f.label :title %><br />
    <%= f.text_field :title, autofocus: true, class: '' %>
  </div>

  <div class="">
    <%= f.label :privacy %><br />
    <%= f.number_field :privacy, class: '' %>
  </div>

  <div class="">
    <%= f.label :author %><br />
    <%= f.collection_select(:author_id, Author.all, :id, :name) %>
  </div>
  
  <div class="">
    <%= f.label :content %><br />
    <%= f.text_area :content, class: '' %>
  </div>

  <div class="">
    <%= label_tag :categories %><br />
    <%= hidden_field_tag "article[category_ids][]", nil %>
    <% Category.all.each do |category| %>
    <span class=''>
      <%= check_box_tag "article[category_ids][]",
	  category.id,
	  @article.category_ids.include?(category.id),
	  id: dom_id(category) %>
      <%= label_tag dom_id(category), category.name %>
    </span>
    <% end %>
  </div>
    
  <div class="actions">
    <%= f.submit("Save", class: "") %>
  </div>

<% end %>
<div>
  <% unless @article.new_record? %>
  <%= link_to 'Delete this article', delete_admin_article_path(@article) %>
  <% end %>
</div>
