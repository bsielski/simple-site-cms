<header class="current_page_header"><h1>Admins</h1></header>
<% if @admins %>
<table>
  <tr>
    <th>Id</th><th>Email</th><th>Authors</th><th>Roles</th><th></th><th></th>
  </tr>
  <%= will_paginate @admins %>
  <% @admins.each do |admin| %>
  <tr>
    <td><%= admin.id %></td>
    <td><%= admin.email %></td>
    <td><%= admin.authors.size %></td>
    <td><%= admin.roles.map{|role| role.name.humanize}.join(", ") %></td>
    <td><%= link_to 'Edit', edit_admin_admin_path(admin) %></td>
    <td><%= link_to 'Delete', delete_admin_admin_path(admin) %></td>
  </tr>
  <% end %>
</table>
<%= will_paginate @admins %>
<% else %>
<p>No admins?. It's impossible!</p>
<% end %>
